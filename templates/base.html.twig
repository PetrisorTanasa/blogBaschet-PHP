<!DOCTYPE html>
<html>
<head>
    <script src="https://code.iconify.design/iconify-icon/1.0.0-beta.3/iconify-icon.min.js"></script>
    <script src="https://use.fontawesome.com/a82c15b821.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <meta name="title" content="Baschet Bucurestean">
    <meta name="viewport" content="width=device-width, initial-scale=0.8">
</head>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{path('app_main')}}">Baschet Bucurestean <i class="fa-solid fa-basketball"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">

        </span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            {% if rol is defined and rol > 0 %}
                <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                <a class="nav-link" href="{{ path('app_article') }}">Creeaza o stire!</a>
            </li>
            {% endif %}
            <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                <a class="nav-link" href="{{path('app_stiri') }}">Vezi toate stirile</a>
            </li>
            {% if rol is defined %}
                <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Ia o pauza</a>
                </li>
            {% endif %}
            {% if rol is not defined %}
                <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </li>
                <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                    <a class="nav-link" href="{{path('app_signup')}}">Sign up</a>
                </li>
            {% endif %}
            {% if rol is defined and rol == 2 %}
                <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Creeaza cont</a>
                </li>
            {% endif %}
            <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                <a class="nav-link" href="{{ path('app_clasament') }}">Clasament</a>
            </li>
            <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                <a class="nav-link" href="{{ path('app_stats') }}">Statistici</a>
            </li>
            {% if rol is defined and rol == 2 %}
            <li style="border-style: solid;border-width: 2px; margin-right:5px" class="nav-item">
                <a class="nav-link" href="{{ path('app_signup') }}">Creeaza cont</a>
            </li>
            {% endif %}
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dropdown
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    {% if rol is defined and rol != 0 %}
                <a class="dropdown-item" href="{{ path('app_article') }}">Creeaza o stire!</a>
            {% endif %}
                     <a class="dropdown-item" href="{{path('app_stiri') }}">Vezi toate stirile</a>
                    {% if rol is defined %}
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Ia o pauza</a>
                    {% endif %}
                    {% if rol is not defined %}
                    <a class="dropdown-item" href="{{ path('app_login') }}">Login</a>
                    <a class="dropdown-item" href="{{path('app_signup')}}">Sign up</a>
                    {% endif %}
                    {% if rol is defined and rol == 2 %}
                    <a class="nav-link" href="{{ path('app_logout') }}">Creeaza cont</a>
                    {% endif %}
                    <a class="dropdown-item" href="{{ path('app_clasament') }}">Clasament</a>
                    <a class="dropdown-item" href="{{ path('app_stats') }}">Statistici</a>
                    {% if rol is defined and rol == 2 %}
                <a class="nav-link" href="{{ path('app_signup') }}">Creeaza cont</a>
            {% endif %}
                </div>
            </li>

        </ul>
    </div>
</nav>

    {% block body %}{% endblock %}
    <footer class="page-footer"><div class="footer content"> </div><div class="flanco-footer content"><div id="footer">

            </div></div></footer>
</div>
</body>
</html>